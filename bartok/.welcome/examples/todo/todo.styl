
bg-color = #1a1a1a
bg-color-a = #1a1a1aff
bg-color-a-low = #1a1a1a11

top-grad = linear-gradient(bg-color-a, bg-color-a-low)
bot-grad = linear-gradient(bg-color-a-low, bg-color-a)

trbl(t, args...)
	top t
	if length(args) > 0
		right args[0]
	else
		right t
	if length(args) > 1
		bottom args[1]
	else
		bottom t
	if length(args) > 2
		left args[2]
	else if length(args) > 0
		left args[0]
	else
		left t

body
	background: bg-color
	zoom: 0.64

.app
	margin: 0 auto
	max-width: 85em
	position: absolute
	trbl: 0

.container
	position: relative
	width: calc(100% - 4em)
	height: 100%
	overflow: hidden
	padding: 0 2em

.todo-header
	display: flex
	justify-content: space-around
	margin-top: 1.5em

#actions-top
	position: absolute
	right: 29px
	top: 37px
	display: flex
	.icon
		font-size: 30px
		color: #555
		transform: scale(1.5, 1)
		font-size: 32px
		padding: 10px
		cursor: pointer
		&:hover
			color: white

.todo-body
	background: transparent
	&, input, button
		color: #999
	input
		background: #272727
		outline: none
	ul
		display: block
		overflow: auto
		overflow-x: hidden
		position: absolute
		trbl: 130px -7px 2.4em 1em
		margin-right: -0.9em
		padding: 1.2em 2.5em 2em 2.5em
		list-style: none
		font-size: 24px
		cursor: default
		user-select: none
		font-weight: 100
		&:before
			content: ''
			position: fixed
			trbl: 6em 19px auto 19px
			height: 2em
			z-index: 9
			background: top-grad
		&:after
			content: ''
			position: fixed
			trbl: auto 19px 2.3em 19px
			height: 60px
			z-index: 9
			background: bot-grad
		li
			padding: 0px 50px 0px 18px
			margin-left: -39px
			margin-right: -17px
			display: flex
			min-height: 40px
			align-items: center
			word-break: break-word
			position: relative
			&:after,
			& span
				pointer-events: none
			&:after
				content: '≡'
				position: absolute
				right: 10px
				font-stretch: ultra-expanded
				color: transparent
			&:not(.invisible):hover,
			&:not(.invisible):hover span
				color: #bbb !important
				background: #444
			&:not(.invisible):hover:after,
			&:not(.invisible):hover span,
			&:not(.invisible):hover input
				color: inherit
			&.completed span
				color: #6e6e6e
			&.dragOver
				border-top: 1px solid
			&.invisible
				display none
			&.dragSpacer
				opacity 0
				span, div, input
					display none
			&.dragSpacer.dragOver
				opacity 1
			&.seperator
				input, span
					display: none
				&:before
					content: ''
					display: block
					height: 2px
					background: repeating-linear-gradient(
						to right,
						#9999997a,
						#9999997a 4px,
						transparent 10px,
						transparent 15px
					)
					position: absolute
					left: 5px
					right: 0
				&:hover:before
					left: 10px
					right: 30px
					background: repeating-linear-gradient(
						to right,
						#ffffff88,
						#ffffff88 4px,
						transparent 10px,
						transparent 15px
					)
	.input-container
		border: 0px solid
		border-radius: 3px
		height: 35px
		input, button
			font-size: 1.1em
		input
			border: 0px
			height: 100%
			width: 100%
			box-sizing: border-box
			padding: 10px
			padding-right: 45px
			&:focus
				background: #000
		button
			height: 100%
			border: 1px solid transparent
			background: transparent
			margin-left: -55px
			&:focus
				outline: none
			&.search
				margin-left: -95px
		form
			height: 100%

input[type="text"]:focus
	color: white
	border: none
	outline: none

input[type="checkbox"]
	left: -18px
	visibility: hidden !important
	opacity: 1 !important
	cursor: pointer
	position: relative
	&:before
		visibility: visible
		position: absolute
		top: -16px
		left: 0px
		content: '☐'
		font-size: 28px
	&:checked:before
		left: -1px
		content: '✓'
		color: #8BC34A

.todo-footer
	position absolute
	bottom 20px
	width calc(100% - 4em)
	display flex
	justify-content space-between
	user-select none

	> div
		cursor: pointer
		border: 1px solid
		border-radius: 3px
		min-width: 70px
		text-align: center
		text-transform: uppercase
		padding: 4px 14px
		font-size: 1.2em
		color: grey
	.todo-count
		margin-left: 1em
		opacity: 0.9
	.active
		color: #b5b5b5
		background: #ffffff10


